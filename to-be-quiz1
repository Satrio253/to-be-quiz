<body>
  <div class="card" role="main">
    <h1>Daily "To Be" Quiz</h1>
    <p class="subtitle">10 new practice questions every day — focused on the verb <em>to be</em>.</p>

    <div class="meta">
      <div id="date" class="small"></div>
      <button id="newBtn" title="Regenerate for today's seed">Refresh</button>
      <button id="showAnswers" class="secondary">Show Answers</button>
    </div>

    <ol id="questions" aria-live="polite"></ol>

    <div id="answers" class="answers" style="display:none;"></div>

    <footer>Copy this file to your site or GitHub. Questions change each day based on the current date.</footer>
  </div>

  <script>
    // Pool of questions (focused on 'to be')
    const POOL = [
      "I ___ a student.",
      "She ___ my sister.",
      "They ___ at school.",
      "He ___ not a teacher.",
      "___ you ready?",
      "We ___ friends.",
      "It ___ a cat.",
      "They ___ not happy.",
      "She ___ beautiful.",
      "You ___ not late.",
      "Is she at home? (write as a question)",
      "I ___ happy. (translate from 'Saya senang')",
      "My brother ___ tall.",
      "We ___ students.",
      "My name ___ Rina. I ___ from Indonesia.",
      "Make negative and question: They are teachers.",
      "Correct: I is in the park.",
      "Correct: She are my sister.",
      "Translate: Dia di sekolah. (Use 'He')",
      "Rewrite paragraph with correct 'to be': 'Hello, my name Anna. I a student. My parents is doctors. They very kind.'",
      "Write two sentences using 'to be': one feeling and one location.",
      "Fill in the blank: It ___ a sunny day.",
      "Fill in the blank: You ___ my friend.",
      "Make question: She is your friend. → ___ she your friend?",
      "Choose correct: My parents ___ (is / are) doctors.",
      "Make negative: He is my teacher. → He ___ my teacher.",
      "Fill in the blank: We ___ not tired.",
      "Correct the mistake: She am beautiful.",
      "Fill in the blank: They ___ in the classroom.",
      "Translate: Saya seorang guru. → I ___ a teacher."
    ];

    // Simple seeded RNG (mulberry32)
    function mulberry32(a) {
      return function() {
        var t = a += 0x6D2B79F5;
        t = Math.imul(t ^ t >>> 15, t | 1);
        t ^= t + Math.imul(t ^ t >>> 7, t | 61);
        return ((t ^ t >>> 14) >>> 0) / 4294967296;
      }
    }

    function seededShuffle(array, seed) {
      const a = array.slice();
      const rnd = mulberry32(seed);
      for (let i = a.length - 1; i > 0; i--) {
        const j = Math.floor(rnd() * (i + 1));
        [a[i], a[j]] = [a[j], a[i]];
      }
      return a;
    }

    function getSeedFromDate(d) {
      // Create a simple numeric seed from YYYYMMDD
      const s = d.getFullYear() * 10000 + (d.getMonth()+1) * 100 + d.getDate();
      return s;
    }

    function renderForDate(d) {
      const seed = getSeedFromDate(d);
      const shuffled = seededShuffle(POOL, seed);
      const selected = shuffled.slice(0, 10);
      const qList = document.getElementById('questions');
      qList.innerHTML = '';
      selected.forEach((q, i) => {
        const li = document.createElement('li');
        li.textContent = q;
        qList.appendChild(li);
      });

      // build a simple answer key (short/brief) for teacher reference
      const answers = selected.map((q) => answerFor(q));
      document.getElementById('answers').innerHTML = '<strong>Answers / Notes</strong><ol>' + answers.map(a => '<li>' + a + '</li>').join('') + '</ol>';

      // show date
      const dateEl = document.getElementById('date');
      dateEl.textContent = d.toLocaleDateString(undefined, { weekday: 'long', year: 'numeric', month: 'short', day: 'numeric' });
    }

    function answerFor(q) {
      // Provide concise answers or model responses for the pool items
      if (q.includes("I ___ a student")) return 'I am a student.';
      if (q.includes("She ___ my sister")) return 'She is my sister.';
      if (q.includes("They ___ at school")) return 'They are at school.';
      if (q.includes("He ___ not a teacher")) return 'He is not a teacher.';
      if (q.includes("___ you ready")) return 'Are you ready?';
      if (q.includes("We ___ friends")) return 'We are friends.';
      if (q.includes("It ___ a cat")) return 'It is a cat.';
      if (q.includes("They ___ not happy")) return 'They are not happy.';
      if (q.includes("She ___ beautiful")) return 'She is beautiful.';
      if (q.includes("You ___ not late")) return 'You are not late.';
      if (q.includes("Is she at home")) return 'Is she at home?';
      if (q.includes("Saya senang")) return 'I am happy.';
      if (q.includes("My brother ___ tall")) return 'My brother is tall.';
      if (q.includes("We ___ students")) return 'We are students.';
      if (q.includes("My name ___ Rina")) return 'My name is Rina. I am from Indonesia.';
      if (q.includes("They are teachers")) return 'Negative: They are not teachers. Question: Are they teachers?';
      if (q.includes("I is in the park")) return 'I am in the park.';
      if (q.includes("She are my sister")) return 'She is my sister.';
      if (q.includes("Dia di sekolah")) return 'He is at school.';
      if (q.includes("Rewrite paragraph")) return 'Hello, my name is Anna. I am a student. My parents are doctors. They are very kind.';
      if (q.includes("Write two sentences")) return 'Example: I am excited. She is at the library.';
      if (q.includes("It ___ a sunny day")) return 'It is a sunny day.';
      if (q.includes("You ___ my friend")) return 'You are my friend.';
      if (q.includes("She is your friend")) return 'Is she your friend?';
      if (q.includes("My parents ___ (is / are) doctors")) return 'My parents are doctors.';
      if (q.includes("He is my teacher")) return 'He is not my teacher.';
      if (q.includes("We ___ not tired")) return 'We are not tired.';
      if (q.includes("She am beautiful")) return 'She is beautiful.';
      if (q.includes("They ___ in the classroom")) return 'They are in the classroom.';
      if (q.includes("Saya seorang guru")) return 'I am a teacher.';
      return 'Check teacher notes.';
    }

    // initial render
    renderForDate(new Date());

    // show / hide answers
    document.getElementById('showAnswers').addEventListener('click', () => {
      const a = document.getElementById('answers');
      a.style.display = a.style.display === 'none' ? 'block' : 'none';
    });

    // refresh button uses today's date seed again (useful if you open on a different timezone)
    document.getElementById('newBtn').addEventListener('click', () => renderForDate(new Date()));
  </script>
</body>
</html>
